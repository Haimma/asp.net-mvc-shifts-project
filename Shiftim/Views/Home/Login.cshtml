@model Shiftim.Models.User
@{
    ViewBag.Title = "Shiftim - התחברות";
}

@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

<link href="~/Content/pages/Login.css" rel="stylesheet" />
<link href="~/Content/pages/cssStyle.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Amatica+SC:400,700&amp;subset=hebrew" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
<div>
    <br />
    <div class="text-center titleStyle"  >Shiftim - סידור משמרות</div>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="login" id="loginID">
                <header class="login-header"><span class="text">התחברות</span><span class="loader"></span></header>
                <form class="login-form">
                    @Html.TextBoxFor(m => m.email, new { @class = "login-input", placeholder = "Email" })
                    @Html.TextBoxFor(m => m.password, new { @class = "login-input", placeholder = "Password", Type = "password" })
                    <button class="login-btn" type="submit">התחבר</button>
                </form>
            </div>
            <div class="text-center">
                <h class="text-danger"> @ViewBag.Msg</h>
            </div>
        }
    </div>
</div>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

