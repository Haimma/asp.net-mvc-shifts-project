@model List<Shiftim.Models.Shifts>

@{
    ViewBag.Title = "Shiftim - הכנסת משמרות";
}
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h2>הכנסת משמרות שבועיות</h2>
<h1 class="text-danger">@TempData["msg"]</h1>

    @using (Html.BeginForm())

    {
        @Html.AntiForgeryToken()

            <table class="table table-striped table-hover" id="tableShow" style="font-size:12px;">
                <tr class="success">
                    <td> <label>יום</label></td>
                    <td> <label>א</label></td>
                    <td> <label>ב</label></td>
                    <td> <label>ג</label></td>
                    <td> <label>ד</label></td>
                    <td> <label>ה</label></td>
                    <td> <label>ו</label></td>
                    <td> <label>ש</label></td>
                </tr>
                <tr>
                    <td> <label>תאריך</label></td>
                    <td><label> @ViewData["SundayDate"]</label> </td>
                    <td><label> @ViewData["MondayDate"]</label> </td>
                    <td><label> @ViewData["TuesdayDate"]</label></td>
                    <td><label> @ViewData["WednesdayDate"]</label></td>
                    <td><label> @ViewData["ThursdayDate"]</label> </td>
                    <td><label> @ViewData["FridayDate"]</label></td>
                    <td><label> @ViewData["SaturdayDate"]</label></td>
                </tr>
                <tr>
                    <td> <label>משמרת</label></td>
                    <td>
                        @Html.DropDownListFor(model => model[0].myShift, new List<SelectListItem> {
                     new SelectListItem {Text = "חופש" },
                        new SelectListItem { Text = "בוקר" },
                       new SelectListItem { Text = "צהריים" },
                    }, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model[1].myShift, new List<SelectListItem> {
                                      new SelectListItem {Text = "חופש" },
               new SelectListItem { Text = "בוקר" },
                       new SelectListItem { Text = "צהריים" },
                    }, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model[2].myShift, new List<SelectListItem> {
                                       new SelectListItem {Text = "חופש" },
                new SelectListItem { Text = "בוקר" },
                       new SelectListItem { Text = "צהריים" },
                    }, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model[3].myShift, new List<SelectListItem> {
                                      new SelectListItem {Text = "חופש" },

               new SelectListItem { Text = "בוקר" },
                       new SelectListItem { Text = "צהריים" },
                    }, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model[4].myShift, new List<SelectListItem> {
                                      new SelectListItem {Text = "חופש" },
               new SelectListItem { Text = "בוקר" },
                       new SelectListItem { Text = "צהריים" },
                    }, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model[5].myShift, new List<SelectListItem> {
                                       new SelectListItem {Text = "חופש" },
                new SelectListItem { Text = "בוקר" },
                       new SelectListItem { Text = "צהריים" },
                    }, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model[6].myShift, new List<SelectListItem> {
                                       new SelectListItem {Text = "חופש" },
                new SelectListItem { Text = "בוקר" },
                       new SelectListItem { Text = "צהריים" },
                    }, new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td> <label>הערות</label></td>
                    <td>@Html.TextBoxFor(model => model[0].comments)</td>
                    <td>@Html.TextBoxFor(model => model[1].comments)</td>
                    <td>@Html.TextBoxFor(model => model[2].comments)</td>
                    <td>@Html.TextBoxFor(model => model[3].comments)</td>
                    <td>@Html.TextBoxFor(model => model[4].comments)</td>
                    <td>@Html.TextBoxFor(model => model[5].comments)</td>
                    <td>@Html.TextBoxFor(model => model[6].comments)</td>
                </tr>
            </table>

            <div >
                <button  id="buttonConShow" type="submit" class="btn btn-success btn-lg" data-dismiss="modal">שלח משמרות</button>
            </div>

            <div id="bottunBack">
                <a class="btn btn-default btn-sm" onclick="location.href='@Url.Action("WorkerPanel", "Worker")'"><i class="glyphicon glyphicon-backward"></i>&nbsp;חזור לתפריט </a>
            </div>
    }

<script>
    $(document).ready(function () {
        if("@ViewBag.e" === "True") {
            $("#tableShow").hide();
            $("#buttonConShow").hide();
        }
        else {
            $("#bottunBack").hide();
        }
    });
</script>